<Page
    x:Class="InteropToolsTestApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InteropToolsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="GoToStart" Label="Capture" Click="CaptureButton_Click" />
            <AppBarButton Icon="OpenFile" Label="Image" Click="ImageButton_Click" />
            <AppBarToggleButton Icon="Video" Label="Record" Click="RecordButton_Click" />
            <AppBarButton Icon="Camera"  Label="Screenshot" Click="ScreenshotButton_Click" />
            <AppBarButton Icon="Pictures" Label="Image 2" Click="ImageButton2_Click" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
